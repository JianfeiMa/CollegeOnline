    <style name="SeparatorLine">
        <item name="android:background">#ffc5c5c5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    <!-- 发布的文字格式 -->
    <style name="ReleaseText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff226300</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <!-- 发布的编辑框 -->
    <style name="ReleaseEdit">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <!-- sping的格式 -->
    <style name="Spinner">
<!--         <item name="android:background">@drawable/trade_spinner_bg</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <!-- 发布按钮 -->
    <style name="BigButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
<!--         <item name="android:background">@drawable/trade_btn_center_bg</item> -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:layout_marginTop">20.0dip</item>
        <item name="android:layout_marginBottom">20.0dip</item>
    </style>
    <!-- 对话框样式 -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="InfoLeftText">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/info_text_left</item>
        <item name="android:paddingTop">@dimen/info_text_top</item>
        <item name="android:paddingBottom">@dimen/info_text_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoRightText">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/info_text_left</item>
        <item name="android:paddingTop">@dimen/info_text_top</item>
        <item name="android:paddingRight">@dimen/info_text_right</item>
        <item name="android:paddingBottom">@dimen/info_text_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoTitleText">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/info_text_left</item>
        <item name="android:paddingTop">@dimen/info_text_top</item>
        <item name="android:paddingRight">@dimen/info_text_right</item>
        <item name="android:paddingBottom">@dimen/info_text_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
 	</style>
 	
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>
    
</resources>
